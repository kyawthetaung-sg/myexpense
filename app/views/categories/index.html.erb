<p id="notice"><%= notice %></p>

<%= render 'layouts/page_title' %>
<div id="body_content">
  <%= link_to '<i class="far fa-sticky-note"></i> '.html_safe + t("action_button.new"), new_category_path, class: "btn btn-info" %>

  <div class="mt-3">
    <table>
      <thead>
        <tr>
          <th>Type</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.type %></td>
            <td><%= category.name %></td>
            <td><%= link_to 'Show', category %></td>
            <td><%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
