<%= render 'layouts/page_title' %>
<div id="body_content">
    <%= link_to t('action_button.new'), new_theme_path, class: "btn btn-info" %>

    <div class="row mt-3" id="theme_color">
      <% @themes.each do |theme| %>
      <div class="col-lg-2 col-md-4 mr-2 mt-2 <%= 'active' if current_user.theme_id == theme.id %>" id="theme_border">
        <%= link_to change_theme_path(theme.id), method: "patch" do %>
            <div id="selection_theme">
              <div id="sidebar_theme" style="background: <%= theme.color %>;"></div>
            </div>
        <% end %>
        <h4 class="text-center">
          <%= theme.name %>
          <a class="float-right" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-ellipsis-v text-info"></i>
          </a>
          <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left" aria-labelledby="dropdownMenu2">
            <%= link_to t("action_button.edit"), edit_theme_path(theme.id), class: "dropdown-item" %>
            <%= link_to t("action_button.delete"), theme_path(theme.id), class: "dropdown-item", method: "delete" %>
          </div>
        </h4>
      </div>
      <% end %>
    </div>
</div>
