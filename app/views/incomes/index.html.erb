<%= render 'layouts/page_title' %>

<div id="body_content">
  <%= link_to '<i class="far fa-sticky-note"></i> '.html_safe + t("action_button.new"), new_income_path, class: "btn btn-info" %>

  <div class="mt-3">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @incomes.each do |income| %>
          <tr>
            <td><%= income.date %></td>
            <td><%= income.description %></td>
            <td><%= income.price %></td>
            <td>
              <%= link_to '<i class="far fa-comment-alt fa-lg"></i>'.html_safe, income, class: "text-secondary mr-2", data: { toggle: 'tooltip', placement: 'bottom', original_title: t("action_button.detail") } %>
              <%= link_to '<i class="far fa-edit fa-lg"></i>'.html_safe, edit_income_path(income), class: "text-secondary mr-2", data: { toggle: 'tooltip', placement: 'bottom', original_title: t("action_button.edit") } %>
              <%= link_to '<i class="far fa-trash-alt fa-lg"></i>'.html_safe, income, method: :delete, class: "text-secondary", data: { confirm: 'Are you sure?' ,toggle: 'tooltip', placement: 'bottom', original_title: t("action_button.delete") } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

